<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_thread_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <Button
        android:id="@+id/activity_thread_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="Create"
        app:layout_constraintBottom_toTopOf="@+id/activity_thread_guideline"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/activity_thread_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/activity_thread_guideline"
        app:layout_constraintEnd_toEndOf="@+id/activity_thread_create_button"
        app:layout_constraintStart_toStartOf="@+id/activity_thread_cancel_button"
        />


    <Button
        android:id="@+id/activity_thread_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Cancel"
        app:layout_constraintBottom_toTopOf="@+id/activity_thread_guideline"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_thread_main_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_thread_guideline" />
</android.support.constraint.ConstraintLayout>